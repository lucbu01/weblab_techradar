# ------------------------------------------------------------
# Default: treat files as text and normalize line endings to LF
# ------------------------------------------------------------
* text=auto eol=lf

# --- Source code / configs (explicit, for clarity) ---
*.ts   text eol=lf
*.tsx  text eol=lf
*.js   text eol=lf
*.jsx  text eol=lf
*.mjs  text eol=lf
*.cjs  text eol=lf
*.cts  text eol=lf
*.mts  text eol=lf

*.html text eol=lf
*.css  text eol=lf
*.scss text eol=lf
*.md   text eol=lf
*.json text eol=lf
*.yml  text eol=lf
*.yaml text eol=lf
*.xml  text eol=lf
*.env  text eol=lf
*.properties text eol=lf

# Keycloak realm export - enforce LF explicitly
techradar-realm.json text eol=lf

# --- Windows command scripts: usually CRLF is expected ---
*.bat  text eol=crlf
*.cmd  text eol=crlf
*.ps1  text eol=crlf

# --- Shell scripts must be LF (important for containers/CI) ---
*.sh   text eol=lf

# --- Binary files: never modify line endings ---
*.png  binary
*.jpg  binary
*.jpeg binary
*.gif  binary
*.webp binary
*.ico  binary
*.svg  text eol=lf

*.pdf  binary
*.zip  binary
*.gz   binary
*.tgz  binary
*.7z   binary
*.jar  binary
*.keystore binary

*.woff  binary
*.woff2 binary
*.ttf   binary
*.eot   binary
